    "/api/order-details/{id}/quantity": {
      "patch": {
        "summary": "Update order detail quantity",
        "description": "Update only the quantity of an order detail",
        "tags": ["OrderDetails"],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Order detail ID"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["quantity"],
                "properties": {
                  "quantity": {
                    "type": "integer",
                    "example": 5,
                    "description": "New quantity"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Order detail quantity updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/OrderDetail"
                }
              }
            }
          },
          "400": {
            "description": "Bad request - Invalid quantity"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Order detail not found"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "OrderDetail": {
        "type": "object",
        "required": ["quantity", "historical_price", "order", "product"],
        "properties": {
          "_id": {
            "type": "string",
            "description": "Order detail unique identifier"
          },
          "quantity": {
            "type": "integer",
            "description": "Quantity of the product in the order"
          },
          "historical_price": {
            "type": "number",
            "format": "float",
            "description": "Unit price at the time of order"
          },
          "order": {
            "type": "string",
            "description": "Order ID reference"
          },
          "product": {
            "type": "string",
            "description": "Product ID reference"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          }
        },
        "example": {
          "_id": "507f1f77bcf86cd799439014",
          "quantity": 2,
          "historical_price": 29.99,
          "order": "507f1f77bcf86cd799439013",
          "product": "507f1f77bcf86cd799439012",
          "createdAt": "2024-01-15T10:30:00.000Z",
          "updatedAt": "2024-01-15T10:30:00.000Z"
        }
      }
    }
  }
}
