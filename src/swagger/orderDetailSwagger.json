          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Order detail ID"
          }
        ],
        "responses": {
          "200": {
            "description": "Order detail deleted successfully"
          },
          "400": {
            "description": "Bad request - Invalid order detail ID"
          },
