{
  "paths": {
    "/api/order-details": {
      "get": {
        "summary": "Get all order details",
        "description": "Retrieve all order details (admin only)",
        "tags": ["OrderDetails"],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Order details retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/OrderDetail"
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - Invalid or missing token"
          },
          "403": {
            "description": "Forbidden - Admin role required"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      },
      "post": {
        "summary": "Create new order detail",
        "description": "Create a new order detail entry",
        "tags": ["OrderDetails"],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "quantity",
                  "historical_price",
                  "order",
                  "product"
                ],
                "properties": {
                  "quantity": {
                    "type": "integer",
                    "example": 2,
                    "description": "Quantity of the product"
                  },
                  "historical_price": {
                    "type": "number",
                    "example": 29.99,
                    "description": "Unit price at time of order"
                  },
                  "order": {
                    "type": "string",
                    "example": "507f1f77bcf86cd799439013",
                    "description": "Order ID"
                  },
                  "product": {
                    "type": "string",
                    "example": "507f1f77bcf86cd799439012",
                    "description": "Product ID"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Order detail created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/OrderDetail"
                }
              }
            }
          },
          "400": {
            "description": "Bad request - Invalid input data"
          },
          "401": {
            "description": "Unauthorized"
          },
          "409": {
            "description": "Conflict - Order detail already exists for this order-product combination"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/api/order-details/bulk": {
      "post": {
        "summary": "Create multiple order details",
        "description": "Create multiple order details in bulk",
        "tags": ["OrderDetails"],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["orderDetails"],
                "properties": {
                  "orderDetails": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "required": ["quantity", "historical_price", "product"],
                      "properties": {
                        "quantity": {
                          "type": "integer",
                          "example": 1
                        },
                        "historical_price": {
                          "type": "number",
                          "example": 19.99
                        },
                        "product": {
                          "type": "string",
                          "example": "507f1f77bcf86cd799439012"
                        }
                      }
                    }
                  },
                  "order": {
                    "type": "string",
                    "example": "507f1f77bcf86cd799439013",
                    "description": "Order ID (if not provided in each detail)"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Order details created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/OrderDetail"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request - Invalid input data"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/api/order-details/{id}": {
