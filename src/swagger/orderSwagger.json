{
  "paths": {
    "/api/orders": {
      "get": {
        "summary": "Get all orders",
        "description": "Retrieve orders (admin sees all orders, users see only their own)",
        "tags": ["Orders"],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Orders retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Order"
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - Invalid or missing token"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      },
      "post": {
        "summary": "Create new order",
        "description": "Create a new order (users create their own orders)",
        "tags": ["Orders"],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["order_number"],
                "properties": {
                  "order_number": {
                    "type": "string",
                    "example": "ORD-001",
                    "description": "Unique order identifier"
                  },
                  "date": {
                    "type": "string",
                    "format": "date-time",
                    "example": "2024-01-15T10:30:00.000Z"
                  },
                  "status": {
                    "type": "string",
                    "enum": [
                      "pending",
                      "paid",
                      "shipped",
                      "cancelled",
                      "delivered"
                    ],
                    "example": "pending"
                  },
                  "account": {
                    "type": "string",
                    "example": "507f1f77bcf86cd799439015",
                    "description": "Account ID (admin can specify, users use their own)"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Order created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Order"
                }
              }
            }
          },
          "400": {
            "description": "Bad request - Invalid input data"
          },
          "401": {
            "description": "Unauthorized"
          },
          "409": {
            "description": "Conflict - Order number already exists"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/api/orders/my-orders": {
      "get": {
        "summary": "Get my orders",
        "description": "Retrieve current user's orders",
        "tags": ["Orders"],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "User orders retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Order"
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/api/orders/{id}": {
      "get": {
        "summary": "Get order by ID",
        "description": "Retrieve a specific order (users can only access their own orders)",
        "tags": ["Orders"],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Order ID"
          }
        ],
        "responses": {
          "200": {
            "description": "Order found successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Order"
                }
              }
            }
          },
          "400": {
            "description": "Bad request - Invalid order ID"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden - Cannot access other users' orders"
          },
          "404": {
            "description": "Order not found"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      },
      "put": {
        "summary": "Update entire order",
        "description": "Replace all order fields (users can only update their own orders)",
        "tags": ["Orders"],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Order ID"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["order_number"],
                "properties": {
                  "order_number": {
                    "type": "string",
                    "example": "ORD-001-UPDATED"
                  },
                  "date": {
                    "type": "string",
                    "format": "date-time",
                    "example": "2024-01-16T10:30:00.000Z"
                  },
                  "status": {
                    "type": "string",
                    "enum": [
                      "pending",
                      "paid",
                      "shipped",
                      "cancelled",
                      "delivered"
                    ],
                    "example": "paid"
                  },
                  "account": {
                    "type": "string",
                    "example": "507f1f77bcf86cd799439015"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Order updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Order"
                }
              }
            }
          },
          "400": {
            "description": "Bad request - Invalid input data"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden - Cannot update other users' orders"
          },
          "404": {
            "description": "Order not found"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      },
      "patch": {
        "summary": "Partially update order",
        "description": "Update specific order fields (users can only update their own orders)",
        "tags": ["Orders"],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Order ID"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "order_number": {
                    "type": "string",
                    "example": "ORD-001-PARTIAL"
                  },
                  "status": {
                    "type": "string",
                    "enum": [
                      "pending",
                      "paid",
                      "shipped",
                      "cancelled",
                      "delivered"
                    ],
                    "example": "shipped"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Order partially updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Order"
                }
              }
            }
          },
          "400": {
            "description": "Bad request - Invalid input data"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden - Cannot update other users' orders"
          },
          "404": {
            "description": "Order not found"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      },
      "delete": {
        "summary": "Delete order",
        "description": "Permanently delete an order (admin only)",
        "tags": ["Orders"],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Order ID"
          }
        ],
        "responses": {
          "200": {
            "description": "Order deleted successfully"
          },
          "400": {
            "description": "Bad request - Invalid order ID"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden - Admin role required"
          },
          "404": {
            "description": "Order not found"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/api/orders/{id}/status": {
      "patch": {
        "summary": "Update order status",
        "description": "Update order status (admin only)",
        "tags": ["Orders"],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Order ID"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["status"],
                "properties": {
                  "status": {
                    "type": "string",
                    "enum": [
                      "pending",
                      "paid",
                      "shipped",
                      "cancelled",
                      "delivered"
                    ],
                    "example": "delivered"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Order status updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Order"
                }
              }
            }
          },
          "400": {
            "description": "Bad request - Invalid status value"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden - Admin role required"
          },
          "404": {
            "description": "Order not found"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Order": {
        "type": "object",
        "required": ["order_number", "status", "account"],
        "properties": {
          "_id": {
            "type": "string",
            "description": "Order unique identifier"
          },
          "order_number": {
            "type": "string",
            "description": "Unique order identifier"
          },
          "date": {
            "type": "string",
            "format": "date-time",
            "description": "Order date"
          },
          "status": {
            "type": "string",
            "enum": ["pending", "paid", "shipped", "cancelled", "delivered"],
            "description": "Current order status"
          },
          "account": {
            "type": "string",
            "description": "Account ID reference"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          }
        },
        "example": {
          "_id": "507f1f77bcf86cd799439013",
          "order_number": "ORD-001",
          "date": "2024-01-15T10:30:00.000Z",
          "status": "pending",
          "account": "507f1f77bcf86cd799439015",
          "createdAt": "2024-01-15T10:30:00.000Z",
          "updatedAt": "2024-01-15T10:30:00.000Z"
        }
      }
    }
  }
}
